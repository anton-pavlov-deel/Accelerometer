.button
  background #1C7899cc
  color white
  text-transform uppercase
  font-family sans-serif
  box-shadow 0px 5px 10px #4e4e4eaa
  border none
  border-radius 5px
  transition 0.3s
  &:disabled
    transition 0.3s
    background #4A7F8F
    color gray
  &:active
    box-shadow 0px 10px 15px #fefefeff
    transition 0.3s
    background #1C7899ff
